<div>
	<fieldset>
		<legend>Введите данные пользователя</legend>
		<%= form_for :user do |form| %>
			
			<%= render 'shared/error_messages' %>

			<p>
				<label for="user_name" >Имя:</label>
				<%= form.text_field :name, :size => 40 %>
			</p>
			<p>
				<label for="user_email" >Email:</label>
				<%= form.text_field :email, :size => 40 %>
			</p>
			<p>
				<label for="user_password" >Пароль:</label>
				<%= form.password_field :password, :size => 40 %>
			</p>

			<p>
				<label for="user_password_confirmation" >Потверждение:</label>
				<%= form.password_field :password_confirmation, :size => 40 %>
			</p>

			<%= submit_tag "Зарегистрировать пользователя", :class => "submit" %>
		<% end %>
	</fieldset>
</div>
