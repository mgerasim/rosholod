<div>
	<fieldset>
		<legend>Зарегистрируйтесь, пожалуйста</legend>
		<%= form_tag do %>
			<p>
				<label for="name">Имя:</label>
				<%= text_field_tag :name, params[:name] %>
			</p>
			<p>
				<label for="password">Пароль:</label>
				<%= text_field_tag :password, params[:password] %>
			</p>

			<p>
				<%= submit_tag "Регистрация" %>
			</p>

		<% end %>
	</fieldset>
</div>
