<h1>Listing users</h1>

<table>
  <tr>
    <th>Имя</th>
    <th>Электронный адрес</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Просмотр', user %></td>
    <td><%= link_to 'Редактирование', edit_user_path(user) %></td>
    <td><%= link_to 'Удалить', user, confirm: 'Вы уверены?', method: :delete %></td>
  </tr>
<% end %>
</table>

